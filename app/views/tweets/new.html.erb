   <section>
      <h1>Submit a tweet</h1>
    </section>

    <!-- Submit a tweet form -->
    <section>
      <% @tweet = Tweet.new  %>
      <%= form_for(@tweet) do |f| %>
        <%= render 'shared/error_messages', object: @tweet %>
