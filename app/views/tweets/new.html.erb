        <%= recaptcha_tags %><br>

        <!-- Submit button -->
       
   
    </section>  

  </aside>

  <aside class="span6">   

    <!-- Submitted tweets header -->
    <section>
      <h1>Submitted tweets</h1>
    </section>

    <!-- List submitted tweets -->
    <section>       

      <!-- List tweets in descending order of score -->
<!--       <% tweets = Tweet.find(:all, :order => "score desc") %> -->
      <% tweets = Tweet.paginate(:page => params[:page], :per_page=>10).order('score DESC') %> 
      <% tweets.each do |tweet| %>

        <!-- Links to upvote and downvote -->
        <div style="padding-top:1px;"> <strong padding="5px;">[<%= tweet.score %>] </strong> <%= link_to raw("<i class=\"icon-thumbs-up icon-white\"></i>"), 
          upvote_tweet_path(tweet), 
          class: "btn btn-success"%>  <%= link_to raw("<i class=\"icon-thumbs-down icon-white\"></i>"), 
          downvote_tweet_path(tweet), 
          class: "btn btn-danger"%>  <%= tweet.text %> </div> <br>
      <% end %>
       <%= will_paginate tweets %>
    </section>
  </aside>
